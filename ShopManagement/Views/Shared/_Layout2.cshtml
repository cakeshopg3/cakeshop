<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.7.2/animate.min.css">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <title>Cakes with Love - Trang chủ</title>

    <link href="~/Content/cakeshop/CSS/footer.css" rel="stylesheet" />
    
    @RenderSection("styles", required: false)
</head>
<body>
    <!--Header-->
    <header>
        <div class="mainnavbar">
            <ul class="nav justify-content-center">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Homepage")" style="color: white"><strong>Cakes with Love</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-logo"><img src="~/Content/cakeshop/Images/logo1.jpg" /></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Homepage")" style="color: white"><strong>TRANG CHỦ</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("About", "Homepage")" style="color: white"><strong>GIỚI THIỆU</strong></a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="[CH Bánh]-[Menu].html" role="button" aria-haspopup="true" aria-expanded="false" style="color: white"><strong>MENU</strong></a>
                    <div class="dropdown-menu">
                        @foreach (var item in ViewBag.categories)
                        {
                            <a class="dropdown-item" href="@Url.Action("Menu","Homepage", new { id = item.id})">@item.category_name</a>
                        }
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="@Url.Action("Menu","Homepage")">All</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("News","Homepage")" style="color: white"><strong>TIN TỨC</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Contact","Homepage")" style="color: white"><strong>LIÊN HỆ</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" style="color: white"><strong>&emsp; &emsp; &emsp; &emsp; &emsp; &emsp; &emsp;</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#collapseFind" role="button" aria-expanded="false" aria-controls="collapseFind">
                        <i class="fas fa-search" style="color: white"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Carts", "Homepage")" style="color: white"><i class="fas fa-shopping-cart"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Homepage")" style="color: white"><i class="fas fa-user-circle"></i></a>
                </li>
            </ul>
        </div>

        <div class="subnavbar">
            <ul class="nav justify-content-center">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><i class="fas fa-bars" style="color: white"></i></a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="@Url.Action("Index", "Homepage")" style="color: #FF9E9E"><strong>TRANG CHỦ</strong></a>
                        <a class="dropdown-item" href="@Url.Action("About", "Homepage")" style="color: #FF9E9E"><strong>GIỚI THIỆU</strong></a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="@Url.Action("Menu","Homepage")" style="color: #FF9E9E"><strong>MENU</strong></a>
                        @foreach (var item in ViewBag.categories)
                        {
                            <a class="dropdown-item" href="@Url.Action("Menu","Homepage", new { id = item.id})">@item.category_name</a>
                        }                        
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="@Url.Action("News","Homepage")" style="color: #FF9E9E"><strong>TIN TỨC</strong></a>
                        <a class="dropdown-item" href="@Url.Action("Contact","Homepage")" style="color: #FF9E9E"><strong>LIÊN HỆ</strong></a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="[CH Bánh]-[Homepage].html" style="color: white"><strong>Cakes with Love</strong></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="collapse" href="#collapseFind" role="button" aria-expanded="false" aria-controls="collapseFind">
                        <i class="fas fa-search" style="color: white"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Carts", "Homepage")" style="color: white"><i class="fas fa-shopping-cart"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Login", "Homepage")" style="color: white"><i class="fas fa-user-circle"></i></a>
                </li>
            </ul>
        </div>
        <div class="collapse" id="collapseFind">
            <div class="card card-body" id="cardFind">
                <form action="@Url.Action("Menu", "Homepage")" method="get">
                    <input class="form-control" name="searchString" type="search" placeholder="Nhập tên sản phẩm cần tìm..." aria-label="Search">
                    <button class="btn btn-light" type="submit">Tìm sản phẩm</button>
                </form>

            </div>
        </div>
    </header>
    <!--EndHeader-->

    <main>
        @RenderBody()
    </main>
    <!--Footer-->
    <footer>
        <div class="card-group footer">

            <div class="card mobilefooter">
                <div class="card-body">
                    <ul class="subfooter">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Homepage")"><i class="fas fa-home" style="color: #FF9E9E"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Homepage")"><i class="fas fa-map-marked-alt" style="color: #FF9E9E"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Menu", "Homepage")"><i class="fab fa-elementor" style="color: #FF9E9E"></i></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Menu")"><i class="fas fa-comment-dots" style="color: #FF9E9E"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="card webfooter">
                <div class="card-body">
                    <ul class="mainfooter">
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Homepage")" style="color: #FF9E9E"><strong>TRANG CHỦ</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("About", "Homepage")" style="color: #FF9E9E"><strong>CỬA HÀNG</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Menu", "Homepage")" style="color: #FF9E9E"><strong>MENU</strong></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Contact", "Menu")" style="color: #FF9E9E"><strong>LIÊN HỆ</strong></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>
    <!--EndFooter-->
    <!--script-->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>