@model ShopManagement.Models.ward

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Begin Page Content -->
<div class="container-fluid">

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit Ward</h6>
        </div>
        <div class="card-body">
            <div class="d-flex justify-content-center">
                @using (Html.BeginForm("Edit", "Ward", FormMethod.Post, new { @class = "w-100" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group row">
                            <label for="country_id" class="col-form-label col-md-4 text-lg-right">Country Name</label>
                            <div class="col-md-5">
                                @Html.DropDownListFor(model => model.country_id, new SelectList(ViewBag.countries, "id", "country_name"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.country_id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="country_id" class="col-form-label col-md-4 text-lg-right">City Name</label>
                            <div class="col-md-5">
                                @Html.DropDownListFor(model => model.city_id, new SelectList(ViewBag.cities, "id", "city_name"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.city_id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="country_id" class="col-form-label col-md-4 text-lg-right">District Name</label>
                            <div class="col-md-5">
                                @Html.DropDownListFor(model => model.district_id, new SelectList(ViewBag.districts, "id", "district_name"), new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.district_id, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="city_name" class="col-form-label col-md-4 text-lg-right">Ward Name</label>
                            <div class="col-md-5">
                                @Html.EditorFor(model => model.ward_name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ward_name, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group row pt-2">
                            <div class="col-md-offset-2 col-md-10 text-center">
                                <input type="submit" value="Save" class="btn btn-primary" />
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary" })
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>

</div>
